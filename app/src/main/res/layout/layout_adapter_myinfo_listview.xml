<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_margin="@dimen/margin"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_myinfo_item_icon"
        android:layout_width="@dimen/img_listitem_icon_width"
        android:layout_height="@dimen/img_listitem_icon_height"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_left"
        android:src="@drawable/cry"
        />

    <TextView
        android:id="@+id/tv_myinfo_item_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="我的浏览"
        />
    <ImageView
        android:id="@+id/btn_myinfo_item_icon_go"
        android:layout_width="@dimen/img_listitem_icon_width"
        android:layout_height="@dimen/img_listitem_icon_height"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/margin_right"
        android:src="@drawable/go"
        />

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:layout_marginTop="@dimen/margin_top"
    >

    <ImageView
        android:id="@+id/img_mesage_user_head"
        android:layout_width="@dimen/img_listicon_width"
        android:layout_height="@dimen/img_listicon_height"
        android:src="@drawable/cry"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_masage_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/app_name"
        android:textSize="@dimen/text_normalsize"
        />

    <TextView
        android:id="@+id/tv_masage_publish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="02-02 09:46"
        android:textSize="@dimen/text_smallsize"
        />
</LinearLayout>

        <TextView
            android:id="@+id/tv_mesage_title_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="zheshi ceshi de wen zi ceshi shifou you xiao guo !!!"
            android:textSize="@dimen/text_smallsize"
            />
    </LinearLayout>
</LinearLayout>
